{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["DOM", "esnext"],
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "**/__tests__/*"]
}
